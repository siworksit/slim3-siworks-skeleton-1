{
    "name": "siworks/slim3-siworks-skeleton",
    "description": "Simple implementation of Slim3 with Doctrine",
    "keywords": ["microframework", "slim3", "doctrine", "rest", "router", "psr7"],
    "homepage": "https://github.com/siworksit/slim3-siworks-skeleton.git",
    "license": "Apache 2.0",
    "authors": [
        {
            "name": "Rafael N. Garbinatto",
            "email": "rafael@siworks.com.br",
            "homepage": "http://www.siworks.com.br/"
        },
        {
            "name": "Diego B. Pimentel",
            "email": "diego@siworks.com.br",
            "homepage": "http://www.siworks.com.br/"
        }
    ],
    "require": {
        "php": ">=7.1",
        "slim/slim": "^3.1",
        "slim/csrf": "^0.8",
        "slim/twig-view": "^2.0",
        "slim/flash": "^0.1.0",
        "twig/extensions": "^1.0",
        "symfony/validator": "3.2",
        "monolog/monolog": "^1.17",
        "doctrine/orm": "~2.5",
        "doctrine/common": "^2.6",
        "doctrine/cache": "^1.6",
        "doctrine/doctrine-bundle": "^1.4",
        "doctrine/migrations": "^1.3",
        "doctrine/doctrine-migrations-bundle": "^1.0",
        "ramsey/uuid-doctrine": "^1.2",
        "php-http/message": "^1.5",
        "php-http/guzzle6-adapter": "^1.1",
        "nesbot/carbon": "1.22.1",
        "ocramius/generated-hydrator": "^2.0",
        "siworks/slim3-doctrine": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
       }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
	}

}

